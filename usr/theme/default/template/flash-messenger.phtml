$messages = $result['messages'];
$pattern = 'alert alert-dismissable alert-%s';
switch ($namespace) {
    case 'success':
        $type = 'success';
        break;
    case 'error':
        $type = 'danger';
        break;
    default:
        $type = 'info';
        break;
}
$class = sprintf($pattern, $type);
$this->bootstrap('js/bootstrap.min.js');
